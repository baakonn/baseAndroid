<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/id_tv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text=""
        android:textColor="@color/color_333"
        android:textSize="14sp"
        android:layout_centerVertical="true" />

    <EditText
        android:id="@+id/id_layout_edittext"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/id_checkbox"
        android:gravity="center_vertical"
        android:background="@null"
        android:hint=""
        android:layout_centerVertical="true"
        android:textSize="14sp"
        android:textColor="@color/color_333"
        android:layout_marginLeft="105dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/id_tv_show_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:textSize="14sp"
        android:textColor="@color/color_333"
        android:visibility="gone"
        android:text=""/>

    <ImageView
        android:id="@+id/id_btn_clear"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_close_2"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/id_checkbox"
        android:layout_width="32dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="40dp"
        android:background="@drawable/selector_bg_checkbox"
        android:button="@null"
        android:checked="false"
        android:visibility="gone" />
</RelativeLayout>